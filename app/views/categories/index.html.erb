<section class="offset-md-1 col-md-10 col-xs-12">
  <div class="my-3 content p-5">

    <div class="w-100 text-center">
      <h1>Categorías</h1>
      <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 200px;">
    </div>

    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th class="text-center">Nombre</th>
        <th class="text-center">Detalles</th>
        <th colspan="3" class="text-center">Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% @categories.each do |category| %>
        <tr class="text-center">
          <td class="align-middle"><%= category.name %></td>
          <td class="align-middle"><%= category.details %></td>
          <td class="align-middle">
            <%= link_to 'Ver', category, class: "btn btn-info text-white" %>
            <%= link_to 'Editar', edit_category_path(category), class: "btn btn-success text-white" %>
            <%= link_to 'Eliminar', category, class: "btn btn-danger text-white", method: :delete, data: { confirm: '¿Estas seguro?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= link_to 'Nueva Categoría', new_category_path,class:"btn btn-dark text-white" %>
    </div>

  </div>
</section>
