<% @order_items.each do |item| %>
<h3><%= item.product.name%></h3>
<h3><%= number_to_currency item.product.price, :locale => :en  %></h3>
<%= form_for(item, remote: true) do |f| %>
<%= f.hidden_field :product_id, value: item.product.id %>
<%= f.number_field :quantity, value: item.quantity.to_i%>
<%= f.submit "Update Cart" %>
<%= link_to "Remove Items", item, method: :delete, remote: true %>
<% end%>
<h2>Subtotal: <%= number_to_currency item.total , :locale => :en%></h2>
<% end %>

<h3>Your current order has a total of: <%= number_to_currency current_order.subtotal, :locale => :en %></h3>