<section class="offset-md-1 col-md-10 col-xs-12">
  <div class="my-3 content p-5">
    <div class="w-100 text-center">
      <h1>Usuarios</h1>
      <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 200px;">
    </div>

    <table class="table">
      <thead class="thead-dark">
      <tr>
        <th class="text-center">Nombre</th>
        <th class="text-center">Apellidos</th>
        <th class="text-center">Email</th>
        <th colspan="3" class="text-center">Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% @recipes.each do |account| %>
        <tr class="text-center">
          <td><%= account.nombre %></td>
          <td><%= account.apellidos %></td>
          <td><%= account.email %></td>
          <td>
            <%= link_to 'Ver',account_path(account), class:"btn btn-info text-white" %>
            <%= link_to 'Editar',edit_account_path(account.id), class:"btn btn-success text-white" %>
            <%= link_to 'Eliminar',account_path(account), method: :delete,data: { confirm: 'Are you sure?' }, class:"btn btn-danger text-white" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to 'Nuevo Usuario', new_account_path,class:"btn btn-dark text-white" %>
    </div>
  </div>
</section>
