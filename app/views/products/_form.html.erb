<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <!-- Bloque izquierda -->
    <div class="col-md-6 col-xs-12">

      <!-- Box name -->
      <div class="form-group">
        <%= form.label :name, "Nombre" %><br />
        <%= form.text_field :name %>
      </div>
      <!-- /Box name -->

      <!-- Box price -->
      <div class="form-group">
        <%= form.label :price, "Precio" %><br />
        <%= form.text_field :price %>
      </div>
      <!-- /Box price -->

      <!-- Box category -->
      <div class="form-group">
        <label for="category_id">Categoría</label>
        <select name="product[category_id]" class="form-control col-md-8 offset-2">
          <option value="null">Seleccione categoría</option>
          <% Category.all.each do |c| %>
            <option value="<%= c.id %>" <%= @product.category_id == c.id ? "selected" : ""%>><%= c.name%></option>
          <% end %>
        </select>
      </div>
      <!-- /Box category -->

      <!-- Box brand -->
      <div class="form-group">
        <label for="brand_id">Marca</label>
        <select name="product[brand_id]" class="form-control col-md-8 offset-2">
          <option value="null">Seleccione marca</option>
          <% Brand.all.each do |b| %>
            <option value="<%= b.id %>" <%= @product.brand_id == b.id ? "selected" : ""%>><%= b.name%></option>
          <% end %>
        </select>
      </div>
      <!-- /Box brand -->

    </div>
    <!-- /Bloque izquierda -->

    <!-- Bloque derecha -->
    <div class="col-md-6 col-xs-12">

      <!-- Box description -->
      <div class="form-group">
        <%= form.label :description, "Descripción" %>
        <%= form.text_area :description %>
      </div>
      <!-- /Box description -->

      <!-- Box onsale -->
      <div class="form-group">
        <%= form.label :onsale, "Oferta" %>
        <%= form.check_box :onsale %>
      </div>
      <!-- /Box onsale -->

      <!-- Box priceOnsale -->
      <div class="form-group">
        <%= form.label :priceOnsale, "Precio de oferta" %>
        <%= form.text_field :priceOnsale %>
      </div>
      <!-- /Box priceOnsale -->

      <!-- Box image -->
      <div class="form-group">
        <%= form.label :image, "Imagen" %>
        <%= form.file_field :image %>
      </div>
      <!-- /Box image -->

    </div>
    <!-- /Bloque derecha -->
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-dark text-white" %>
    <%= link_to 'Cancelar', products_path, class:"btn btn-warning text-white" %>
  </div>
<% end %>