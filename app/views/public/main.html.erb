<section>
  <!-- Ofertas -->
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-sm-10 py-4">
      <h2 class="text-center mb-5 text-white" style="background-color: black; border-radius: 20px">Ofertas</h2>
      <div class="row">
        <% @products.first(2).each do |product| %>
          <% if product.onsale == true %>
            <div class="col-xl-6 col-md-12">

              <div class="row">

                <div class="col-md-6 mb-3 text-center">
                  <%= image_tag(product.image, class:"img-fluid rounded", style: "width: 200px") %>
                  <div class="col-md-12 text-center mt-3">
                    <div class="p-2 mb-2" style="background-color: #cc0000">
                      <h5 class="text-white">25%</h5>
                    </div>
                    <div class="alert alert-dark p-2 my-auto">
                      <h5><%= number_to_currency product.priceOnsale, :locale => :en %></h5>
                    </div>

                  </div>
                </div>

                <div class="col-md-6">
                  <h3><%= product.name %></h3>
                  <p><%= product.description%></p>
                  <div class="col-md-12 text-center mt-3">
                    <%= link_to 'Más información', product, class: "btn btn-info text-white" %>
                  </div>
                </div>

                <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 300px;">

              </div>

            </div>
          <% end %>
        <% end %>
      </div>
      <div class="text-center">
        <%= link_to 'Ver más ofertas', ofertas_path, class: "btn btn-dark text-white" %>
      </div>
    </div>
  </div>
  <!-- /Ofertas -->

  <!-- Productos -->
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-sm-10 py-4">
      <h2 class="text-center mb-5 text-white" style="background-color: black; border-radius: 20px">Catálogo de productos</h2>
      <div class="row">
        <% @products.each do |product| %>
          <% if product.onsale == false %>
            <div class="col-xl-6 col-md-12">

              <div class="row">

                <div class="col-md-6 mb-3 text-center">
                  <%= image_tag(product.image, class:"img-fluid rounded", style: "width: 200px") %>
                  <div class="col-md-12 text-center mt-3">
                    <div class="alert alert-dark p-2 my-auto">
                      <h5><%= number_to_currency product.price, :locale => :en %></h5>
                    </div>

                  </div>
                </div>

                <div class="col-md-6">
                  <h3><%= product.name %></h3>
                  <p><%= product.description%></p>
                  <div class="col-md-12 text-center mt-3">
                    <%= link_to 'Más información', product, class: "btn btn-info text-white" %>
                  </div>
                </div>

                <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 300px;">

              </div>

            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /Productos -->
</section>