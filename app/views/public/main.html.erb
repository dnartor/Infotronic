<section>
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-sm-10 py-4">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xl-6 col-md-12">

            <div class="row">

              <div class="col-md-6 mb-3 text-center">
                <%= image_tag(product.image, class:"img-fluid rounded", style: "width: 200px") %>
                <div class="col-md-12 text-center mt-3">
                  <div class="alert alert-dark p-2 my-auto">
                    <h5><%= number_to_currency product.price, :locale => :en %></h5>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <h3><%= product.name %></h3>
                <p><%= product.description%></p>
                <div class="col-md-12 text-center mt-3">
                  <%= link_to 'Más información', product, class: "btn btn-info" %>
                </div>
              </div>

              <div class="col-md-12 text-center mb-5">
                <%= form_for(@order_item, remote: true) do |f| %>
                  <%= f.hidden_field :product_id, value: product.id %>
                  <%= f.number_field :quantity, value: 1, min: 1%><br>
                  <%= f.submit "Añadir al carrito", class:"btn btn-dark mt-3" %>
                <% end %>
              </div>
              <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 300px;">

            </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>