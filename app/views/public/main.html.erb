<section>
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-sm-10 py-4">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xl-6 col-md-12">
            <div class="row">
              <div class="col-md-6 mb-3 text-center">
                <%= image_tag(product.image, class:"img-fluid rounded") %>
              </div>
              <div class="col-md-12">
                <h3><%= product.name %></h3>
                <p><%= product.description%></p>
                <%= link_to 'Show Product', product %>
                <div class="col-md-4 text-center mt-3">
                  <div class="alert alert-dark p-2 my-auto">
                    <h5><%= number_to_currency product.price, :locale => :en %></h5>
                  </div>
                </div>
                <div class="col-md-8 text-center mt-3">
                  <%= form_for(@order_item, remote: true) do |f| %>
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.number_field :quantity, value: 1, min: 1%>
                    <%= f.submit "Add To Cart", class:"btn btn-dark" %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col-md-12 d-xl-none">
              <hr>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>










