<section class="offset-md-1 col-md-10 col-xs-12">
  <div class="my-5 content py-3 ">
    <div class="w-100 text-center">
      <h1>Favoritos</h1>
      <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto border-dark" style="width: 200px;">
    </div>
    <div class="table-responsive">
      <table class="table table-striped">

        <thead>
        <tr>
          <th class="text-center">Artículo</th>
          <th class="text-center">Descripción</th>
          <th class="text-center">Precio</th>
          <th class="text-center">Acciones</th>
        </tr>
        </thead>
        <tbody>
          <% @list_items.each do |item| %>
            <tr>

              <th class="text-center align-middle">
                <%= image_tag(item.product.image, class:"img-fluid rounded ml-2", style: "width: 100px") %>
                <h5 class="mt-2"><%= item.product.name%></h5>
              </th>

              <td class="text-center align-middle col-md-4">
                <p><%= item.product.description%></p>
              </td>

              <td class="text-center align-middle">
                <% if item.product.onsale == true %>
                  <p><%= number_to_currency item.product.priceOnsale, :locale => :en %></p>
                <% else %>
                  <p><%= number_to_currency item.product.price , :locale => :en %></p>
                <% end %>
              </td>

              <td class="text-center align-middle">
                <%= form_for(item, remote: true) do |f| %>
                  <%= f.hidden_field :product_id, value: item.product.id %>
                  <%= link_to "Eliminar", item, method: :delete, remote: true, class: "btn btn-danger text-white" %>
                <% end%>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>