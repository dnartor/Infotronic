<section class="offset-md-2 col-md-8 col-xs-12 custom-form">
  <div class="d-flex justify-content-center mt-5 content">
    <div class="col-md-10 col-xs-12 py-4">
      <div class="row">
        <div class="col-12 text-center">
          <h1 class="mb-2">Datos a rellenar</h1>
          <hr class="teal accent-3 mb-4 mt-0 mx-auto border-dark" style="width: 200px;">
          <%= form_with(model: history) do |form| %>
            <% if history.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

                <ul>
                  <% history.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :tarjeta %>
              <%= form.text_field :tarjeta %>
            </div>

            <div class="form-group">
              <%= form.label :domicilio %>
              <%= form.check_box :domicilio %>
            </div>

            <div class="actions d-flex justify-content-center mb-2">
              <%= form.submit "Enviar", class: "btn btn-dark" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>