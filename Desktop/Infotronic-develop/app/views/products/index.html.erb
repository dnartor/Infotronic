<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>Marca</th>
      <th>En rebajas</th>
      <th>Categor√≠a</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.onsale %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

