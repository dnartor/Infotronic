<%= form.text_field :direccion %></p>
<p><%= form.label :dni %><br>
<%= form.number_field :dni %></p>
<p><%= form.label :pais %><br>
<%= form.text_field :pais %></p>
<p><%= form.submit %> </p>
<% end %>
