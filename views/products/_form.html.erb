<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <label for="brand_id">Marca</label>
    <select name="product[brand_id]" class="form-control">
      <option value="null">Seleccione marca</option>
      <% Brand.all.each do |b| %>
        <option value="<%= b.id %>" <%= @product.brand_id == b.id ? "selected" : ""%>><%= b.name%></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <%= form.label :onsale %>
    <%= form.check_box :onsale %>
  </div>

  <div class="field">
    <label for="category_id">Categoria</label>
    <select name="product[category_id]" class="form-control">
      <option value="null">Seleccione categor√≠a</option>
      <% Category.all.each do |c| %>
      <option value="<%= c.id %>" <%= @product.category_id == c.id ? "selected" : ""%>><%= c.name%></option>
      <% end %>
    </select>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>





<% end %>
